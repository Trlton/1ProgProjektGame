import pygame
from SpriteParrentClass import gameObejct
from constants import *
from pygame import *

class player(gameObejct):
    # Player values
    widthHitbox = 0
    heightHitbox = 0
    #playerMaxHealth = HP
    currentHealth = maxHealth


    def updatePlayer(self):
        self.acc = Vector2(0, 0)

        # Check input and set acceleration
        keys = pygame.key.get_pressed()
        if keys[leftBinding]:
            self.acc.x = -1
        if keys[rightBinding]:
            self.acc.x = 1
        if keys[upBinding]:
            self.acc.y = -1
        if keys[downBinding]:
            self.acc.y = 1

        if self.acc.length_squared() > 0:
            self.acc.normalize_ip()

        self.vel *= playerMaxSpeed

        self.vel += self.acc
        self.pos += self.vel

        # Wrap around the screen
        self.pos.x %= SCREEN_WIDTH
        self.pos.y %= SCREEN_HEIGHT

        # Update player position
        self.rect.center = self.pos

        #Diagonal movement fix (so its not faster going diagonal)



















