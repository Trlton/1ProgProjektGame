import pygame
from SpriteParrentClass import gameObejct
from constants import *
from pygame import *

class player(gameObejct) :
    #Player values
    maxSpeed = playerMaxSpeed
    widthHitbox = 0
    heightHitbox = 0
    maxHealth = playerMaxHealth
    currentHealth = maxHealth

### ### Player movement ### ###

    #SETUP PLAYER MOVEMENT VARIABLES
    moveUp = false
    moveDown = false
    moveLeft = false
    moveRight = false


    #PLAYER MOVEMENT key pressed
    if event.type == pygame.KEYDOWN :
        if event.type == upBinding :
            moveUp = true
        if event.type == downBinding :
            moveDown = true
        if event.type == leftBinding :
            moveLeft = true
        if event.type == rightBinding :
            moveRIGHT = true

    # PLAYER MOVEMENT key no longer pressed
    if event.type == pygame.KEYUP:
        if event.type == upBinding:
            moveUp = false
        if event.type == downBinding:
            moveDown = false
        if event.type == leftBinding :
            moveLeft = false
        if event.type == rightBinding :
            moveRIGHT = false
